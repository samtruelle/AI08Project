extends layout

block content
    span
        button(type="button", class="btn btn-primary btn-lg", data-toggle="modal", data-target="#loginModal")
          Launch Login

        div(class="modal fade", tabindex="-1", role="dialog", id="loginModal")
            div(class="modal-dialog", role="document")
                div(class="modal-content")
                    div(class="modal-header")
                    div(class="modal-body")
                        body
                    div(class="modal-footer")
                        button(type="button", class="btn btn-default", data-dismiss="modal")
                            Close Cancel
                        button(type="button", class="btn btn-primary")
                            Save Login

    span
        button(type="button", class="btn btn-primary btn-lg", data-toggle="modal", data-target="#importModal")
            Launch Import Data

        div(class="modal fade", tabindex="-1", role="dialog", id="importModal")
            div(class="modal-dialog", role="document")
                div(class="modal-content")
                    div(class="modal-header")
                    div(class="modal-body")
                        body
                            form(action="/file-upload", class="dropzone", id="dataImportDropzone")
                    div(class="modal-footer")
                        button(type="button", class="btn btn-default", data-dismiss="modal")
                            Close Cancel
                        button(type="button", class="btn btn-primary")
                            Save Import

