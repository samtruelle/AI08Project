extends layout

block content
    //button(onclick="move()") Import
    //script.
    //    function move() {
    //        window.location.href = '/consume'
    //    }

    div(id="wrapper")

        //SideBar
        div(id="sidebar-wrapper", class="dataVizSideMenu")
            ul(class="sidebar-nav")
                li(class="sidebar-brand")
                    span(class="sideBarTopSpan")
                        button(type="button", class="importButton sidebar-nav", data-toggle="modal", data-target="#importModal", text-align="center").
                            Import
                        button(type="button", class="closeSideBarLink", id="menu-toggle", aria-label="import data file")
                            span(class="glyphicon glyphicon-menu-left", aria-hidden="true")


        div(id="page-content-wrapper")


    script.

        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        $("body").on("mousemove", function (event) {
            if (event.pageX < 15) {
                event.preventDefault();
                console.log("test")
                if ($("#wrapper").hasClass("toggled")) {
                    setTimeout(function () {
                        $("#wrapper").toggleClass("toggled");
                    }, 300);
                }
            }
        });


    div(class="modal fade", tabindex="-1", role="dialog", id="importModal")
        div(class="modal-dialog", role="document")
            div(class="modal-content")
                div(class="modal-header")
                div(class="modal-body")
                    body
                        form(action="/javascripts/file-upload", class="dropzone", id="dataImportDropzone")
                div(class="modal-footer")
                    button(type="button", class="btn btn-default", data-dismiss="modal")
                        Close Cancel
                    button(type="button", class="btn btn-primary")
                        Save Import

    div(class="container-fluid")
        span
            button(type="button", class="btn btn-primary btn-lg loginButton", data-toggle="modal", data-target="#loginModal")
                Launch Login

            div(class="modal fade", tabindex="-1", role="dialog", id="loginModal")
                div(class="modal-dialog", role="document")
                    div(class="modal-content")
                        div(class="modal-header")
                        div(class="modal-body")
                            body
                        div(class="modal-footer")
                            button(type="button", class="btn btn-default", data-dismiss="modal")
                                Close Cancel
                            button(type="button", class="btn btn-primary")
                                Save Login